<form action="/user/register" method="POST" >
    <input type="text" name="login" required >
    <input type="password" name="password" required >
    <button>send</button>
</form>

<div class="messages" >
    {{#if success}}
        <div class="success">{{success}}</div>
    {{else}}
        {{#each errors}}
            <div class="error" >{{this}}</div>
        {{/each}}
    {{/if}}
</div>